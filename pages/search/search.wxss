/* pages/search/search.wxss */
.search-search{
    height: 80rpx;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    background: #f8f8f8;
}
.search-search .input{
    width: 600rpx;
    height: 54rpx;
    min-height: 0;
    border-radius: 6rpx;
    background: #fff;
    font-size: 14px;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.search-search .text{
    display: inline-block;
    height: 100%;
    width: 100rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 14px;
    color: #222;
}

.history{
    width: 100%;
    height: auto;
    padding: 30rpx;
    box-sizing: border-box;
}
.his-top{
    width: 100%;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
    font-size: 10px;
}
.his-title{
    color: #666;
}
.his-clear{
    color: #999
}
.history-list{
    display: inline-block;
    width: auto;
    height: 40rpx;
    font-size: 10px;
    line-height: 40rpx;
    padding: 0 16rpx;
    margin-right: 16rpx;
    color: #666;
    background: #f8f8f8;
    border-radius: 6rpx;
}





.floor-ul{
    height: auto;
    overflow: hidden;
}
.floor-li{
    float: left;
    width: 50%;
    height: 440rpx;
    box-sizing: border-box;
    margin: 20rpx 0;
    padding: 0 20rpx;
    border-top: 1px solid #e8e8e8;
}
.floor-li-img{
    width: 100%;
    height: 330rpx;
    overflow: hidden;
    padding: 30rpx;
    box-sizing: border-box;
}
.floor-li-img-img{
    width: 100%;
    height: 100%;
}
.shop-name{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 12px;
    text-align: left;
}
.shop-price{
    height: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: red;
}