/* pages/address/address.wxss */
page{
    height: 100%;
}
.form{
    width: 100%;
    height: 100%;
    background: #f8f8f8;    
}
.form .list{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f8f8f8;
    font-size: 12px;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.form .list .title{
    position: relative;
    display: inline-block;
    width: 20%;
    height: 100%;
    color: #666;
}
.form .list .title::after{
    content: '';
    width:1px;
    height: 40rpx;
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -20rpx;
    background: #ccc;
}
.form .list .info{
    width: 80%;
    height: 100%;
    padding-left: 20rpx;
    box-sizing: border-box
}

.form .save{
    width: 100%;
    text-align: center;
    background: #26a2ff;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    left: 0;
}