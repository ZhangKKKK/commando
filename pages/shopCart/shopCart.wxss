/* pages/shopCart/shopCart.wxss */
page{
    height: 100%;
    padding-bottom: 80rpx;
    box-sizing: border-box;
    background: #f8f8f8
}
.shop-carts-list{
    width: 100%;
    height: 200rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin: 20rpx 0;
    background: #fff;
}
.img{
    width: 160rpx;
    height: 160rpx;
    float: left;
}
.info{
    height: 100%;
    width: 300rpx;
    color: #222;
    font-size: 14px;
    float: left;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.info .name{
    width: 100%;
    max-height: 120rpx;
    line-height: 40rpx;
}
.info .price{
    width: 100%;
    height: 40rpx;
    font-size: 12px;
    color: red;
}

.shop-number{
    float: left;
    width:140rpx;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.shop-number .button{
    width: 30rpx;
    height: 30rpx;
    line-height: 26rpx;
    text-align: center;
    font-size: 18px;
    color: #222;
    border: 1px solid #999;
    border-radius: 50%;
}
.shop-number .number{
    display: inline-block;
    width: 40rpx;
    min-height: 30rpx;
    outline: 1px solid #f7f7f7;
    border: 1px solid #fafafa;
    border-radius: 6rpx;
    text-align: center;
    font-size: 12px;
}

.delete{
    width: 100rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.delete-img{
    width: 40rpx;
    height: 40rpx;
}



.submit{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 1px solid #f7f7f7;
    font-size: 12px;
}
.sub-price{
    color: red;
    font-weight: bold;
    font-size: 16px;
}
.subOrder{
    float: left;
    width: 25%;
    height: 100%;
    background: #26a2ff;
    text-align: center;
    color: #fff;
}
.total-price{
    width: 75%;
    height: 100%;
    float: left;
    padding: 0 30rpx;
    box-sizing: border-box;
    
}
.total-price .sub-r{
    float: right;
}