/* pages/allOrder/allOrder.wxss */
page{
    height: 100%;
    background: #f8f8f8;
}
.head-title{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f7f7f7;
    background: #fff;
    font-size: 12px;
}
.shopInfo{
    width: 100%;
    height: 300rpx;
    margin: 30rpx 0;
    background-color: #fff;
    font-size: 12px;
}
.shop{
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f8f8f8;
}
.shopname{
    float: left;
}
.contact{
    float: right;
    margin-left: 10rpx;
}
.contact-img{
    color: red;
}

.info{
    width: 100%;
    height: 140rpx;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f8f8f8;
}
.info .img{
    width: 100rpx;
    height: 100rpx;
}
.info .title{
    font-size: 12px;
    width: 300rpx;
    height: 100%;
}
.info .price{
    font-size: 12px;
    width: 80rpx;
    height: 100%;
}
.info .price .delete{
    color: #999;
    text-decoration: line-through;
}
.icon-del{
    color: red;
}
.total{
    width: 100%;
    height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}


.sky{
    font-size: 14px;
    color: #26a2ff;
    padding: 20rpx;
    box-sizing: border-box;
}