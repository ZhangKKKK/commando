/* pages/order/order.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    width: 100%;
    height: 100%;
    background: #f8f8f8;
}
.flower{
    width: 100%;
    height: 20rpx;
    line-height: 0;
}
.flower .img{
    width: 100%;
    height: 100%;
}

.writeAddress{
    width: 100%;
    height: 80rpx;
    font-size: 12px;
    color: #333;
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.address-info{
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    box-sizing: border-box;
    font-size: 12px;
}
.token{
    line-height: 120rpx;
    height: 120rpx;
}
.add-ress{
    width: 600rpx;
    height: 120rpx;
    color: #999;
}
.add-ress .peopel{
    height: 40rpx;
    line-height: 40rpx;
}
.moreAddress{
    height: 80rpx;
    line-height: 40rpx;
}
.add-ress-con{
    color: #222;
}

.shopInfo{
    width: 100%;
    height: 300rpx;
    margin: 30rpx 0;
    background-color: #fff;
    font-size: 12px;
}
.shop{
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f8f8f8;
}
.shopname{
    float: left;
}
.contact{
    float: right;
    margin-left: 10rpx;
}
.contact-img{
    color: red;
}

.info{
    width: 100%;
    height: 140rpx;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f8f8f8;
}
.info .img{
    width: 100rpx;
    height: 100rpx;
}
.info .title{
    font-size: 12px;
    width: 300rpx;
    height: 100%;
}
.info .price{
    font-size: 12px;
    width: 80rpx;
    height: 100%;
}
.info .price .delete{
    color: #999;
    text-decoration: line-through;
}

.total{
    width: 100%;
    height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}


.submit{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    border-top: 1px solid #f7f7f7;
    font-size: 12px;
}
.sub-price{
    color: red;
    font-weight: bold;
    font-size: 16px;
}
.subOrder{
    float: left;
    width: 25%;
    height: 100%;
    background: #26a2ff;
    text-align: center;
    color: #fff;
}
.total-price{
    width: 75%;
    height: 100%;
    float: left;
    padding: 0 30rpx;
    box-sizing: border-box;
    
}
.total-price .sub-r{
    float: right;
}